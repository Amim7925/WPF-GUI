<UserControl x:Class="WPF_GUI.UserContorls.UserPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WPF_GUI.UserContorls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="500" FontSize="16" Background="White" >
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="6*"/>
            <ColumnDefinition Width="2*"/>
        </Grid.ColumnDefinitions>
        <StackPanel Margin="0 50" Grid.Column="1">
            <Label Content="User Name :"></Label>
            <TextBox x:Name="txtUserName" Height="30" Margin="5 0 0 0" ></TextBox>
            <Label Content="Mail :"></Label>
            <TextBox x:Name="txtMail" Height="30" Margin="5 0 0 0"></TextBox>
            <Label Content="Role :"></Label>
            <TextBox x:Name="txtRole" Height="30" Margin="5 0 0 0"></TextBox>
            <Button Height="40" Margin="0 30" Width="140" Content="Create User"></Button>
        </StackPanel>
    </Grid>
</UserControl>
