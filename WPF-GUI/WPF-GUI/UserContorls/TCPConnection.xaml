<UserControl x:Class="WPF_GUI.UserContorls.TCPConnection"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WPF_GUI.UserContorls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="500" Background="#fff">
    <Grid>
        <StackPanel Margin="20 50">
            <Label Content="IP Adress :"></Label>
            <TextBox x:Name="txtUserName" Height="25" Margin="5 0 0 0" ></TextBox>
            <Label Content="Port Number :" Margin="0 15 0 0"></Label>
            <TextBox x:Name="txtPortNumber" Height="25" Margin="5 0 0 0" ></TextBox>
            <Button Content="Save" Margin="0 30" Width="150" Height="30"></Button>
        </StackPanel>
    </Grid>
</UserControl>
