<UserControl x:Class="WPF_GUI.UserContorls.SearchCyclePage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WPF_GUI.UserContorls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="500" Background="#fff">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition Height="4*"/>
        </Grid.RowDefinitions>
        <Grid Grid.Row="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <StackPanel  Grid.Column="0" Margin="15">
                <TextBox x:Name="txtSearch"  Height="25" Margin="5 27 10 0"></TextBox>
            </StackPanel>
            <Button Grid.Column="1" Content="Search" Margin="33 40 35 20"></Button>

        </Grid>
        <ListView Grid.Row="1">

        </ListView>


    </Grid>
</UserControl>
